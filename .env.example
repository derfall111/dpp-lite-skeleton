# === Database (SQLite for easy local dev; switch to Postgres later if needed) ===
DATABASE_URL="file:./dev.db"

# === File storage ===
# Local upload dir (for dev). In prod, use S3/MinIO and set STORAGE_DRIVER=s3.
STORAGE_DRIVER="local"
UPLOAD_DIR="./uploads"

# === Chain / anchoring ===
RPC_URL="https://your-l2-rpc.example"
PRIVATE_KEY="0xYOUR_PRIVATE_KEY"
CONTRACT_ADDRESS="0xYourAnchorRegistryAddress"

# === App ===
APP_BASE_URL="http://localhost:3000"
